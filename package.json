{
  "name": "practice-project",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test:playwright": "npx playwright test --verbose",
    "test:smoke": "npx playwright test --grep='@smoke''",
    "test:regression": "npx playwright test --grep '@regression'",
    "test:api": "npx playwright test --config=playwright.api.config.ts",
    "test:web": "npx playwright test --config=playwright.web.config.ts",
    "test:all": "npm run test:api ; npm run test:web",
    "allure:generate": "allure generate reports/allure-results --clean",
    "allure:serve": "allure serve reports/allure-results",
    "test:all:chromium": "npx playwright test --project=chromium",
    "prettier": "prettier . --check",
    "prettier:fix": "prettier . --write",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "husky",
    "clean": "rimraf ./reports"
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@faker-js/faker": "^9.8.0",
    "@playwright/test": "^1.52.0",
    "@types/node": "^22.15.16",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "allure-playwright": "^3.2.2",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-playwright": "^2.2.2",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0",
    "zod": "^4.1.11"
  },
  "dependencies": {
    "dotenv": "^17.2.1"
  }
}
